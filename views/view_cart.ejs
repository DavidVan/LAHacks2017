
<% include partials/header.ejs %>

<script src = "/js/jquery.js"></script>
<script src = "/js/cart.js"></script>

<body>
    <% include partials/navbar.ejs %>
    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Total</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody id = "table">
                        <script>
                            products = <%- JSON.stringify(products) %>

                            //console.log(cart);

                            for (var key in cart)
                            {
                                //console.log(key)
                                var item_id = key;

                                var item = products[item_id];

                                var html =
                                '<tr id="'+item_id+'">' +
                                    '<td class="col-sm-8 col-md-6">' +
                                    '<div class="media">' +
                                    '    <a class="thumbnail pull-left" href="#"> <img class="media-object" src=' + item.itemImageURL +' style="width: 72px; height: 72px;"> </a>' +
                                    '    <div class="media-body">' +
                                    '        <h4 class="media-heading"><a href="#" >'+ item.itemName + '</a></h4>' +
                                    '    </div>' +
                                    '</div></td>' +
                                    '<td class="col-sm-1 col-md-1" style="text-align: center">' +
                                    '<input type="number" min = "1" class="form-control quantityControl" id="quantity'+item_id +'" onchange=update(id)  value="'+cart[key]+'">' +
                                    '</td>' +
                                    '<td class="item_price col-sm-1 col-md-1 text-center"><strong>$' +item.itemPrice+ '</strong></td>' +
                                    '<td class="item_total" id = "total_'+item_id+'" col-sm-1 col-md-1 text-center"><strong>$'+ (cart[key]*item.itemPrice) + '</strong></td>' +
                                    '<td class="col-sm-1 col-md-1">' +
                                    '<td class="actions" data-th="">' +
                                    '    <button id="count_refresh_'+item_id+'" class="btn btn-info btn-sm refreshButton"><span class="glyphicon glyphicon-refresh"></span></button>' +
                                    '    <button class="remove_item btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></button>' +
                                    '</td>' +
                                '</tr>';
                                $("#table").append(html);

                            }

                            $(".remove_item").click(function() {
                                removeFromCart($(this).parent().parent().attr('id'));
                                $(this).parent().parent().remove();
                                getTotalPrice(cart, function(data) {
                                    $("#totalPrice").html("$" + data);
                                });
                            });

                            function update(inputID)
                            {
                                console.log(inputID);
                                var id = inputID.substring(8);
                                console.log(id);
                                var newQuantity = document.getElementById(inputID).value;
                                console.log(newQuantity);
                                updateQuantity(id, newQuantity);
                                $("#total_" + id).html("$" + (cart[id]*products[id].itemPrice));
                                getTotalPrice(cart, function(data) {
                                    $("#totalPrice").html("$" + data);
                                });
                            }

                            $(".refreshButton").click(function() {
                                var key = $(this).attr('id');
                                //console.log(key);
                                id = key.substring(14);
                                var quantityKey = "quantity" + id;
                                var newQuantity = document.getElementById(quantityKey).value;
                                //console.log(id);
                                //console.log(newQuantity);
                                updateQuantity(id, newQuantity);
                                $(this).parent().parent().find('.item_total').html("$" + products[id].itemPrice*cart[id])
                                getTotalPrice(cart, function(data) {
                                    $("#totalPrice").html("$" + data);
                                });
                            });
                        </script>


                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td><h3>Total</h3></td>
                            <td class="text-right"><h3><strong class = "price" id = "totalPrice">$</strong><script>getTotalPrice(cart, function(data) {
                                //console.log(data);
                                $(".price").append(data);
                            });</script></h3></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>
                            <button type="button" class="btn btn-danger" id = "removeAll">Remove All Items from Cart</button>
                            </td>
                            <td>
                            <button type="button" class="btn btn-default"><a href = "/">
                                <span class="glyphicon glyphicon-shopping-cart"></span>Continue Shopping
                            </button></td>
                            <td>
                            <button id="checkout" type="button" class="btn btn-success">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- .container -->

    <script>
        $("#removeAll").click(function() {
        for (var key in cart) {
            removeFromCart(key)
            $("#"+key).remove();
            }
        getTotalPrice(cart, function(data) {
            $("#totalPrice").html("$" + data);
        });
        });
    </script>

